#fetch defautl format as pdb instead of mmcif
python
from pymol import cmd

def fetchpdb(*args, **kwargs):
    if 'type' not in kwargs:
        kwargs['type'] = 'pdb'
    return cmd.fetch(*args, **kwargs)

cmd.extend('fetch', fetchpdb)
python end

